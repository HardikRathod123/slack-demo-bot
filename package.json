{
  "name": "getting-started-typescript",
  "version": "1.0.0",
  "description": "Bolt getting started app in TypeScript",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc -p .",
    "build:watch": "tsc -w -p .",
    "start": "npm run build && node dist/basic.js",
    "start:watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/basic.ts",
    "ngrok": "ngrok http 3000"
  },
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^3.3.0",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.6",
    "nodemon": "^2.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4"
  }
}
