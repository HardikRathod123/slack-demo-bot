{
    "display_information": {
        "name": "Demo AI Chatbot",
        "description": "Chat bot which interacts with users",
        "background_color": "#1e42ba",
        "long_description": "This is slack chatbot which interacts with users. You can send message to this chatbot and it will use all slack data of workspace and AI to answer to your particular query. If you like this app please thank the developers and give them treat."
    },
    "features": {
        "bot_user": {
            "display_name": "Demo AI Chatbot",
            "always_online": false
        }
    },
    "oauth_config": {
        "redirect_urls": [
            "https://0e2e-103-112-218-170.ngrok-free.app/slack/oauth_redirect"
        ],
        "scopes": {
            "bot": [
                "app_mentions:read",
                "channels:history",
                "chat:write",
                "chat:write.public",
                "groups:history",
                "im:history",
                "im:write",
                "mpim:history",
                "reactions:read"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "request_url": "https://072d-103-112-218-170.ngrok-free.app/slack/events",
            "bot_events": [
                "app_mention",
                "message.channels",
                "message.groups",
                "message.im",
                "message.mpim",
                "reaction_added"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}